<%= render 'layouts/errors', :object => @comment %>

<%= form_for [@post, @comment], :html => {:class => "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :author, class: "control-label" %>
    <%= f.text_field :author, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :entry, class: "control-label"  %>
    <%= f.text_area :entry, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-default' %>
  </div>
<% end %>
