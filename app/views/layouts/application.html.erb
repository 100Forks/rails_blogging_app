<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand">Blogtastic</a>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><%= link_to 'Home' %></li>
          <li><%= link_to 'New Post', new_post_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><span class="navbar-text">Welcome, <%= link_to current_user.username, profile_path(current_user.username) %></span></li>
            <li><button type="button" class="btn btn-default navbar-btn"><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></button></li>
          <% else %>
            <li><button type="button" class="btn btn-default navbar-btn"><%= link_to 'Sign in', new_user_session_path %></button></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <p class='bg-warning'><%= flash[:alert] %></p>
    <p class='bg-info'><%= flash[:notice] %></p>
    <p class='bg-danger'><%= flash[:error] %></p>
    <%= yield %>
  </div>
</body>
</html>
